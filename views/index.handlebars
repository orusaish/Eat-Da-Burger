<div class="header">
    <div class="text-center">
        <img src="/assets/img/burger.png" class="rounded" alt="Burger">
        <h1>Eat Da Burger</h1>
    </div>

</div>
<br>
<div class="row">
    <div class="col-md-4">
        <div id='avail'>
            <h2>Burgers Available to Eat:</h2>
            <ul>
                {{#each burgers}} {{#unless this.devoured}}
                <li>
                    {{this.id}}. {{this.burger_name}}

                    <form action="/{{this.id}}" method="POST">
                        <input type="hidden" name="devoured" value="false">
                        <button class="btn btn-warning" type="submit">Eat Me!</button>
                    </form>

                </li>
                {{/unless}} {{/each}}
            </ul>
        </div>
    </div>
    <div class="col-md-4">
        <div id='add'>
            <h2>Add a Burger: </h2>

            <form class="create-update-form" action="/" method="POST">
                <div class="form-group">
                    <label for="dab">Burger Name:</label>
                    <input type="text" id="dab" name="burger_name">
                </div>
                <button class="btn btn-primary" type="submit">Add Burger</button>
            </form>
        </div>
    </div>

    <div class="col-md-4">
        <div id='devoured'>
            <h2>Burgers that Have <br>Been Devoured: </h2>

            <ul>
                {{#each burgers}} {{#if this.devoured}}
                <li>
                    {{this.id}}. {{this.burger_name}}
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>


</div>